      <!--Bank of America Personal Loan Chargeoffs, Recoveries section end-->
      <!--Used Car Loans Officers section start-->
      <div class="volume-auto-loan seo-auto-loan-tabs">
         <h2 class="tab_blue_content"><%=@bank.name%> New and Used Car Loans Officers</h2>
         <!--Used Car Loans desktop section end-->
         <div class="tabs-data-main desktop-tabs-data">
            <div class="tabs-data-hdng">
               <div class="col-xs-12 col-md-6">Name</div>
               <div class="col-xs-12 col-md-6">Contact</div>
            </div>
               <%if @loan_officers.present? %>
                  <%@loan_officers.each do |loan_officer|%>
                  <div class="tabs-data-row">
                    <div class="col-xs-12 col-md-6">
                        <p><%= remove_unnecessary_keywords(loan_officer.try(:first)) %> <%=remove_unnecessary_keywords(loan_officer.try(:last))%></p>
                        <p><%= remove_unnecessary_keywords(loan_officer.title)%></p>
                    </div>
                    <div class="col-xs-12 col-md-6">
                         <p><%= loan_officer.phone1.present? ? mobile_no_formatting(loan_officer.phone1) : 
                          loan_officer.phone2.present? ? mobile_no_formatting(loan_officer.phone2) : mobile_no_formatting(loan_officer.cell)%></p>
                    </div>
                  </div>
                <%end%>
               <%else%>
                  <div class="tabs-data-row no-record-box">
                        No Records Found
                   </div>
               <%end%>
