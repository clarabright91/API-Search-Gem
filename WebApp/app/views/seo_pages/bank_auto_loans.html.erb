         <!--Used Car Loans Officers mobile tabs -->
         <div class="tabs-data-main tabs-accordians-box">
            <div class="panel-group">
             <%if @loan_officers.present?%>
              <%@loan_officers.first(3).each_with_index do |loan_officer, i|%>
                 <div class="panel panel-default">
                    <div class="panel-heading tabs-data-hdng">
                       <a class="accordion-toggle collapsed" data-toggle="collapse" href="#collapse_<%=i.to_s%>">
                         <%= remove_unnecessary_keywords(loan_officer.try(:first))%> <%=remove_unnecessary_keywords(loan_officer.try(:last))%>
                         <br>
                         <%= remove_unnecessary_keywords(loan_officer.title)%>
                       </a>
                    </div>
                    <div id="collapse_<%=i.to_s%>" class="panel-collapse collapse">
                       <div class="tabs-data-row">
                          <div class="col-xs-12 col-md-12">
                             <h5>Contact</h5>
                              <p><%= loan_officer.phone1.present? ? mobile_no_formatting(loan_officer.phone1) : mobile_no_formatting(loan_officer.phone2)%></p>
                          </div>
                       </div>
                    </div>
                 </div>
               <%end%>
               <%else%>
                   <div class="tabs-data-row no-record-box">
                     No Records Found
                   </div>
               <%end%>
            </div>
         </div>
      </div>
      <!--Used Car Loans Officers section end-->
      
