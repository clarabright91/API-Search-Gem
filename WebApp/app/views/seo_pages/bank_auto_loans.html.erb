<script type="text/javascript">
  // section for web view
  $("#desktop_news").click(function(){
    <%(5..9).each do |i|%>
      $("#news_data_<%=i.to_s%>").toggle();
    <%end%>
    $("#desktop_news").hide();
  });
  $("#mobile_news_data").click(function(){
  //section for mobile view 
     <%(3..9).each do |i|%>
      $("#mobile_news_articles_data_<%=i.to_s%>").toggle();
    <%end%>
    $("#mobile_news_data").hide();
  })

  $(".initial-section").click(function(){
    $("#bank_details").addClass('show-box');
  $(".initial-section").hide();
  })
  $("#fdic_auto_loan_data_section_btn").click(function(){
    $("#fdic_auto_loan_data_section").removeClass("mb-hide");
  $("#fdic_auto_loan_data_section_btn").hide();
  })
</script>