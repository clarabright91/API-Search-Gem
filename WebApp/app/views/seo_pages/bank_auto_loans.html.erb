                <%end%>   
              <%else%>
                <div class="car-auto-loan-news no-record-box">
                    No Records Found
                </div>
              <%end%>
           </div>
            <!-- for mobile view -->
            <div class="mb-only">
              <%if @news_articles.present?%>
                <%@news_articles.each_with_index do |na, i|%>
                  <%if i < 3 %>
                    <div class="car-auto-loan-news">
                      <h6><%=link_to na.headline.truncate(50), na.url, target: "_blank"%></h6> 
                        <p><%=na.text.truncate(72)%>,  <%#=link_to "more info", na.url, target: "_blank"%></p>
                    </div>
                  <%else%>
                    <div id='mobile_news_articles_data_<%=i.to_s%>' style= "display:none;">
                      <div class="car-auto-loan-news">
                        <h6><%=link_to na.headline.truncate(50), na.url, target: "_blank"%></h6> 
                          <p><%=na.text.truncate(72)%>,  <%#=link_to "more info", na.url, target: "_blank"%></p>
                      </div>
                    </div>  
                  <%end%>  
                <%end%>
                <%if @news_articles.count > 3%>
                  <div class="news-see-more">
                    <a class= "news-see-more-link pull-right see-more-fdic" id="mobile_news_data">See More</a>
                  </div>
                <%end%>  
              <%else%>
                <div class="car-auto-loan-news">
                    No Records Found
                </div>
              <%end%>
            </div>
      </div>
      <!-- News sections ends here -->

      <div class="volume-auto-loan full-width loan-detail-blocks car-auto-loan-othr-bank-box">
         <h3 class="tab_blue_content">Auto Loans from Banks Similar to <%=@bank.name%></h3>
         <div class="car-auto-loan-othr-bank">
            <%if @near_by_banks.present? %>
            <%@near_by_banks.each do |nbb|%>
              <%=link_to nbb.name, bank_home_auto_loan_path(cert: nbb.cert,bank_name: custom_path(nbb.name)) %>
              <%end%>
            <%else%>
            <div class="car-auto-loan-news no-record-box">
               No Records Found
            </div>
            <%end%>
         </div>
      </div>
   </div>
</section>
