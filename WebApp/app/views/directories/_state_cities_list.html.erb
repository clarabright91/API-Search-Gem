<% title 'Cities list in '+state_full_name(@state_name) %>
<section class="content-main dirctory mortgage-rates-state">
  <div class="container">
    <div class="directory-box">
      <h1>Cities List in <%=state_full_name(@state_name)%></h1>
        <div class="directory-links-box">
           <%@cities.each do |city|%>
              <div class="col-xs-12 col-md-4">
                <%if @flag == 'mortgage'%>
                  <%current_path = city_home_mortgage_rates_path(state: city.state_code, city: city.city.tr(' ', '+'),city_id: city.id)%>
                <%elsif @flag == 'refinance'%>
                  <%current_path = city_home_refinance_rates_path(state: city.state_code, city: city.city.tr(' ', '+'),city_id: city.id)%>
                <%end%>      
               <%=link_to city.city, current_path%>
              </div>      
           <%end%>   
        </div>                 
    </div>
  </div>
</section>