<!-- Root file of application user for rendering all the pages-->
<!DOCTYPE html>
<html>
  <head>
    <title>
        <% if yield(:title).present? %>
          <%= yield(:title) %>
        <% elsif @page.present?%>
          <%= @page.meta_title.present? ? @page.meta_title : 'Standup App'%>
        <%else%>
            Standup App
        <%end%>
    </title>
    <meta charset="utf-8"> <meta http-equiv="X-UA-Compatible" content="IE=edge"> <meta name="viewport" content="width=device-width, initial-scale=1">
      <%= csrf_meta_tags %>
      <!-- required stylesheets link -->
      <%= stylesheet_link_tag "bootstrap.min"%>
      <%= stylesheet_link_tag "style"%>
      <%= stylesheet_link_tag "scrollBar"%>

      <!-- required stylesheets link for calculator-->
      <% if (params["controller"] == "calculator") %>
        <%= stylesheet_link_tag "calculator"%>
      <%end%>

      <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Lato:300,400,700,900"%>

      <!-- required javascript files -->
      <%= javascript_include_tag "jquery.min"%>
      <%= javascript_include_tag "jquery.validate.js"%>
      <%= javascript_include_tag "additional-methods.js"%>

      <!-- required javascript files for chart -->
      <%= javascript_include_tag "highcharts"%>
      <%= javascript_include_tag "Chart.bundle"%>
      <%= javascript_include_tag "chartkick"%>
      <%= javascript_include_tag "scrollBar"%>
      <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
      <%= javascript_include_tag "maskmoney" %>

      <!-- required style links  -->
      <script src="https://use.fontawesome.com/e7102aad9c.js"></script>

  </head>
  <body class="fixed skin-blue-light">
    <div class="wrapper">
      <!-- <p id="notice"><%#= flash[:notice] %></p> -->
      <%if !flash[:notice].blank?%>
        <div class="col-md-offset-3 col-md-6 alert alert-success" style="height: 5%;">
          <button type="button" class="close" data-dismiss="alert">x</button>
            <%= flash[:notice]%>
        </div>
      <%elsif !flash[:danger].blank?%>
        <div class="col-md-offset-3 col-md-6 alert alert-danger" style="height: 5%;">
          <button type="button" class="close" data-dismiss="alert">x</button>
            <%= flash[:danger]%>
        </div>
      <%end%>
      <noscript>
        <div class="alert alert-danger"> It seems that javascript is disbabled from your browser, Please enable javascript or change the browser for better performance.
        </div>
      </noscript>
      <!-- rendering header partial  -->
      <%= render 'partials/header' %>
	    <%= yield %>
      <!-- rendering modals -->
	    <%= render 'partials/modals' %>
      <!-- rendering footer partial  -->
	    <%= render 'partials/footer' %>
    </div> <!-- wrapper end-->
  </body>
</html>
