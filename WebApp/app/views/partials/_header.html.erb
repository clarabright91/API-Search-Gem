<script type="text/javascript">
  $(function() {
    $('.login-btn').click(function(){
      $('.login-mdl-header').show();
      $('.price-alert-header').hide();
    });
    $('.price-alert-btn').click(function(){
      $('.login-mdl-header').hide();
      $('.price-alert-header').show();
    });
    $('.signup-link-clr').click(function(){
      $('.login-mdl-header').show();
      $('.price-alert-header').hide();
    });

    

    var pgurl = window.location.href.substr(window.location.href
      .lastIndexOf("/")+1);
        $(".navbar-nav a").each(function(){
          if($(this).attr("href").split("/")[1]  == pgurl || $(this).attr("href").split("/")[2]  == pgurl)
            $(this).closest("li").addClass("active");
          else
            $(this).closest("li").removeClass("active");   
        })
    });

</script>

<script type="text/javascript">
  $(function() {
    var header = $(".fixed-header");
    $(window).scroll(function() {    
        var scroll = $(window).scrollTop();
        if (scroll >= 50) {
            header.addClass("scrolled");
        } else {
            header.removeClass("scrolled");
        }
    });
  });
</script>