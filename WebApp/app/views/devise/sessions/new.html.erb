<%title "Sign In"%>
<section class="content-main login-page">
 <div class="container">
  <h1>Sign In</h1>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'sign_in_form'}) do |f| %>
      <%if flash[:alert].present?%>
        <%- flash.each do |name, msg| -%>  <!-- Custom error message for devise  -->
        <div class="col-md-offset-3 col-md-6 alert alert-danger" style="height: 5%;">
         <button type="button" class="close" data-dismiss="alert">x</button>
          <%=msg%>
        </div>
       <%- end -%>
      <%end%> 
    <%= devise_error_messages! %>
    <div class="login-page-cntnt">
      <div class="login-rows">
        <%= image_tag("login-user.png", :alt => "User") %>
        <img src="images/login-user.png" alt="">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>
      <div class="login-rows">
       <%= image_tag("login-pass.png", :alt => "Password") %>
       <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>
      <div class="login-rows cntnt-login">
       <%= f.submit "Sign In", class: "login-page-btn" %>
       <div class="forgot-signup-links">
         <%= link_to "Forgot Password", new_user_password_path %>
           or
         <%= link_to "Sign up Now", new_registration_path(resource_name), class: "signup-link-clr" %>
       </div>
       <p>or sign up with</p>
       <div class="social-login">
        <%= link_to image_tag("facebook_13.png"), user_facebook_omniauth_authorize_url() %>
        <%= link_to image_tag("google_13.png"), user_google_oauth2_omniauth_authorize_url() %>
        <!-- <a href=""><%#= image_tag("facebook_13.png", :alt => "Facebook") %></a>
        <a href=""><%#= image_tag("twitter_15.png", :alt => "Twitter") %></a>
        <a href=""><%#= image_tag("google_13.png", :alt => "Google") %></a> -->
       </div>
      </div>
     </div>
   <% end %>
  </div>
</section>
